<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:gravity="center"
    tools:context="cc.xaabb.iconeditlayout.MainActivity">

    <cc.xaabb.iconeditlayout.IconEditLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        app:layoutPadding="5dp"
        app:layoutBackground="@android:color/white"
        app:layoutRadius="4dp"
        app:splitLineWidth="1dp"
        app:splitLineColor="#999"
        app:iconHeight="24dp"
        app:iconWidth="24dp"
        app:iconSrc="@mipmap/ic_launcher"
        app:iconEditText="123"
        app:iconEditTextSize="10sp"
        />
</LinearLayout>
